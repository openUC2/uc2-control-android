<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="motor"
            type="com.uc2control.models.MotorModel" />
    </data>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MotorControlFragment">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X"
        android:textAlignment="center" />

    <include
        android:id="@+id/stepper_x_control"
        layout="@layout/view_motor_control_stepper" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Y"
        android:textAlignment="center" />

    <include
        android:id="@+id/stepper_y_control"
        layout="@layout/view_motor_control_stepper" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Z"
        android:textAlignment="center" />

    <include
        android:id="@+id/stepper_z_control"
        layout="@layout/view_motor_control_stepper" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A"
        android:textAlignment="center" />

    <include
        android:id="@+id/stepper_a_control"
        layout="@layout/view_motor_control_stepper" />

</LinearLayout>

</layout>